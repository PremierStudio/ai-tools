{
  "name": "@premierstudio/ai-hooks-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "turbo run typecheck",
    "lint": "oxlint --tsconfig tsconfig.base.json packages/",
    "lint:fix": "oxlint --fix --tsconfig tsconfig.base.json packages/",
    "fmt": "oxfmt packages/",
    "fmt:check": "oxfmt --check packages/",
    "check": "npm run lint && npm run fmt:check && npm run typecheck && npm run test",
    "release:preflight": "npm run check",
    "release:publish:dry": "npm publish --workspaces --access public --dry-run",
    "release:publish": "npm run check && npm publish --workspaces --access public",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "semantic-release": "^25.0.3",
    "tsup": "^8.4.0",
    "turbo": "^2.5.0",
    "typescript": "^5.8.0",
    "vitest": "^3.1.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "npm@10.9.0",
  "version": "1.1.1"
}
